{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "target": "esnext",

        "lib": ["esnext", "dom", "dom.iterable"],
        "module": "esnext",
        "moduleDetection": "force",

        "declaration": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions":true,
        "useDefineForClassFields": true,
        "outDir": "types",

        "paths": {
            "https://*": ["./vendor/*"],

            "https://cdn.jsdelivr.net/gh/revelryengine/gltf@v0.3.4-alpha/*":                ["./packages/gltf/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/renderer@v0.3.5-alpha/*":            ["./packages/renderer/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/ecs@v0.3.3-alpha/*":                 ["./packages/ecs/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/utils@v0.3.2-alpha/*":               ["./packages/utils/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/core@v0.3.6-alpha/*":                ["./packages/core/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/sample-environments@v0.3.0-alpha/*": ["./packages/sample-environments/*"],
            "https://cdn.jsdelivr.net/gh/revelryengine/sample-models@v0.3.0-alpha/*":       ["./packages/sample-models/*"],
        }
    },
    "exclude": [
        "./@packages"
    ]
}
